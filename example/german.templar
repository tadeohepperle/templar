LANG_NAME = "Deutsch"
WHATS_UP = "Wie geht's?"
INTRO(name: str, age: int) = "Ich bin {age} Jahre alt und heiße {name}."

DATE(year: int, month: int, day: int) = {
	"Es ist der {day}."
	_month_name(month)
	year
}
_month_name(month: int) = switch month {
	0: "Januar"
	1: "Februar"
	2: "März"
	3: "April"
	4: "Mai"
	5: "Juni"
	6: "Juli"
	7: "August"
	8: "September"
	9: "Oktober"
	10: "November"
	11: "Dezember"
} else "Unbekannter Monat"
	
	